@model SICProject.Models.DepartmentmasterVM

@{
    ViewData["Title"] = "Edit Department";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-pencil-square"></i> Edit Department</h2>
        <a asp-action="ListOfDepartment" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="DepartmentId" />

                <div class="mb-3">
                    <label asp-for="DepartmentName" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                        <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                    </div>
                    <span asp-validation-for="DepartmentName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Remarks" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-chat-left-text"></i></span>
                        <input asp-for="Remarks" class="form-control" placeholder="Enter any remarks" />
                    </div>
                    <span asp-validation-for="Remarks" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save2"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
