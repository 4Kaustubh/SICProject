@model SICProject.Models.InstrumentsmasterVM

@{
    ViewData["Title"] = "Edit Instruments";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Instruments</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditInstruments">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="InstrumentsId" />

                <div class="mb-3">
                    <label asp-for="InstrumentName" class="form-label fw-semibold"></label>
                    <input asp-for="InstrumentName" class="form-control" placeholder="Enter instrument name" />
                    <span asp-validation-for="InstrumentName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Remarks" class="form-label fw-semibold"></label>
                    <input asp-for="Remarks" class="form-control" placeholder="Enter any remarks" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success mx-2">
                        <i class="bi bi-save"></i> Save
                    </button> |
                    <a asp-action="ListOfInstruments" class="btn btn-warning mx-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>