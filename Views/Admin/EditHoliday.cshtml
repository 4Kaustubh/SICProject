@model SICProject.Models.HolidaymasterVM

@{
    ViewData["Title"] = "Edit Holiday";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Holiday</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditHoliday">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="HolidayId" />

                <div class="mb-3">
                    <label asp-for="HolidayDate" class="form-label fw-semibold">
                        <i class="bi bi-calendar-date me-1"></i> @Html.DisplayNameFor(m => m.HolidayDate)
                    </label>
                    <input asp-for="HolidayDate" class="form-control" type="date" />
                    <span asp-validation-for="HolidayDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Reson" class="form-label fw-semibold">
                        <i class="bi bi-chat-left-text me-1"></i> @Html.DisplayNameFor(m => m.Reson)
                    </label>
                    <input asp-for="Reson" class="form-control" placeholder="Enter reason for holiday" />
                    <span asp-validation-for="Reson" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success mx-2">
                        <i class="bi bi-save"></i> Save
                    </button> |
                    <a asp-action="ListOfHoliday" class="btn btn-secondary mx-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>