@model SICProject.Models.BookingmasterVM

@{
    ViewData["Title"] = "New Booking";
}
<div class="row p-1">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible rounded-0 border-dark text-dark fw-bold" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible rounded-0 border-dark text-dark fw-bold" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-calendar-plus me-2"></i> New Booking Slot</h3>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
@if (ViewBag.Instruments!=null)
    {
        
  
    <div class="card shadow rounded">
        <div class="card-body">
            <form asp-action="Booking">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="InstrumentId" class="form-label"></label>
                        <select asp-for="InstrumentId" asp-items="ViewBag.Instruments" class="form-select">
                            <option value="">-- Select an Instrument Name --</option>
                        </select>
                        <span asp-validation-for="InstrumentId" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Remarks" class="form-label"></label>
                        <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save2 me-1"></i> Save Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <strong>No Instruments Available for Booking</strong>
        </div>
    }
</div>